<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FlyoutEvents.ViewModels"
             xmlns:prism="http://prismlibrary.com"
             prism:TabbedPage.Title="First"
             prism:TabbedPage.IconImageSource="page_minus_in.png"
             x:Class="FlyoutEvents.Pages.FirstPage"
             x:DataType="viewModels:FirstViewModel">
    <ContentPage.Content>
            <VerticalStackLayout Margin="8" Spacing="12">
                <Button Text="Current Time" Command="{Binding PublishEventCommand}" />
                <Label Text="{Binding CurrentTime}"></Label>
            </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>